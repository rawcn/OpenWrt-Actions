CONFIG_PACKAGE_libdbus=y
# libevdev: evdev 输入事件处理库
CONFIG_PACKAGE_libevdev=y
# libfdisk: fdisk 底层磁盘库
CONFIG_PACKAGE_libfdisk=y
# libmount: mount/umount 等命令的依赖库
CONFIG_PACKAGE_libmount=y
# libparted: parted 分区工具的依赖库
CONFIG_PACKAGE_libparted=y
# libpopt: 命令行选项解析库
CONFIG_PACKAGE_libpopt=y
# libsmartcols: 表格化输出美化库
CONFIG_PACKAGE_libsmartcols=y
# libstdcpp: C++ 标准库
CONFIG_PACKAGE_libstdcpp=y
# libtirpc: 远程过程调用 (RPC) 库
CONFIG_PACKAGE_libtirpc=y
# libudev-zero: 轻量级 udev 设备管理库
CONFIG_PACKAGE_libudev-zero=y
# liburing: io_uring 异步 I/O 支持库
CONFIG_PACKAGE_liburing=y
# libusb-1.0: USB 设备访问库
CONFIG_PACKAGE_libusb-1.0=y
# zlib: 通用压缩库
CONFIG_PACKAGE_zlib=y

#--------------------[ 加密与网络库 ]--------------------
# libcurl: 客户端 URL 传输库
CONFIG_PACKAGE_libcurl=y
# libgnutls: GnuTLS 加密库 (SSL/TLS 实现)
CONFIG_PACKAGE_libgnutls=y
# libiperf3: iperf3 性能测试工具的依赖库
CONFIG_PACKAGE_libiperf3=y
# libnghttp2: HTTP/2 协议支持库
CONFIG_PACKAGE_libnghttp2=y
# libtasn1: ASN.1 编码支持库 (用于证书解析)
CONFIG_PACKAGE_libtasn1=y

#--------------------[ 格式与协议库 ]--------------------
# libexpat: XML 解析库
CONFIG_PACKAGE_libexpat=y
# liblzo: LZO 压缩库
CONFIG_PACKAGE_liblzo=y
# libpcre2: 正则表达式库 (Perl Compatible Regular Expressions 2)
CONFIG_PACKAGE_libpcre2=y
# libavahi-client / libavahi-dbus-support: Avahi 服务发现客户端库
CONFIG_PACKAGE_libavahi-client=y
CONFIG_PACKAGE_libavahi-dbus-support=y

#--------------------[ 终端与交互库 ]--------------------
# libncurses: 终端界面支持库
CONFIG_PACKAGE_libncurses=y
# libreadline: 命令行历史与编辑库
CONFIG_PACKAGE_libreadline=y


#=================================================#
# 8. GnuTLS 库功能配置 (GnuTLS Features)
#=================================================#

# 启用 ALPN (应用层协议协商)
CONFIG_GNUTLS_ALPN=y
# 启用匿名 Diffie-Hellman 加密套件
CONFIG_GNUTLS_ANON=y
# 支持 DTLS-SRTP 协议 (用于 WebRTC)
CONFIG_GNUTLS_DTLS_SRTP=y
# 启用心跳扩展 (Heartbeat Extension)
CONFIG_GNUTLS_HEARTBEAT=y
# 启用 OCSP (在线证书状态协议)
CONFIG_GNUTLS_OCSP=y
# 启用 PSK (预共享密钥) 加密
CONFIG_GNUTLS_PSK=y
# 启用 TLS-SRP (安全远程密码协议)
CONFIG_GNUTLS_TLS_SRP=y


#=================================================#
# 9. libcurl 库功能配置 (libcurl Features)
#=================================================#

# 启用 cookie 支持
CONFIG_LIBCURL_COOKIES=y
# 启用加密认证机制 (Digest, NTLM)
CONFIG_LIBCURL_CRYPTO_AUTH=y
# 支持 file:// 协议
CONFIG_LIBCURL_FILE=y
# 支持 FTP 协议
CONFIG_LIBCURL_FTP=y
# 支持 HTTP/HTTPS 协议
CONFIG_LIBCURL_HTTP=y
# 通过 nghttp2 启用 HTTP/2 支持
CONFIG_LIBCURL_NGHTTP2=y
# 使用 OpenSSL 作为后端加密库
CONFIG_LIBCURL_OPENSSL=y
# 支持代理功能
CONFIG_LIBCURL_PROXY=y
# 支持 TFTP 协议
CONFIG_LIBCURL_TFTP=y
# 使用线程化 DNS 解析器
CONFIG_LIBCURL_THREADED_RESOLVER=y
# 支持 TLS-SRP 认证
CONFIG_LIBCURL_TLS_SRP=y
# 支持 Unix 域套接字
CONFIG_LIBCURL_UNIX_SOCKETS=y


