#=================================================#
#               目标平台与设备配置
#=================================================#

# 指定目标架构为 MediaTek（联发科）
CONFIG_TARGET_mediatek=y

# 启用 MediaTek 下的 Filo Logic 平台支持（用于 Wi-Fi 芯片或 SoC）
CONFIG_TARGET_mediatek_filogic=y

# 指定具体设备型号：中国移动 RAX3000ME 路由器
CONFIG_TARGET_mediatek_filogic_DEVICE_cmcc_rax3000me=y


#=================================================#
#               GNUTLS 加密库功能支持
#=================================================#

# 启用 ALPN（应用层协议协商）支持
CONFIG_GNUTLS_ALPN=y

# 启用匿名 Diffie-Hellman 加密套件（匿名认证，一般不推荐生产环境使用）
CONFIG_GNUTLS_ANON=y

# 支持 DTLS-SRTP 协议（常用于 WebRTC 安全传输）
CONFIG_GNUTLS_DTLS_SRTP=y

# 启用心跳扩展（Heartbeat Extension），用于 TLS 心跳检测
CONFIG_GNUTLS_HEARTBEAT=y

# 启用 OCSP（在线证书状态协议）支持，用于验证证书吊销状态
CONFIG_GNUTLS_OCSP=y

# 启用 PSK（预共享密钥）加密方式
CONFIG_GNUTLS_PSK=y

# 启用 TLS-SRP（安全远程密码协议）支持
CONFIG_GNUTLS_TLS_SRP=y


#=================================================#
#               libcurl 功能模块配置
#=================================================#

# 启用 cookie 支持（用于会话保持）
CONFIG_LIBCURL_COOKIES=y

# 启用加密认证机制（如 Digest、NTLM 等）
CONFIG_LIBCURL_CRYPTO_AUTH=y

# 支持 file:// 协议访问本地文件
CONFIG_LIBCURL_FILE=y

# 支持 FTP 协议
CONFIG_LIBCURL_FTP=y

# 支持 HTTP/HTTPS 协议
CONFIG_LIBCURL_HTTP=y

# 支持 HTTP/2 协议（通过 nghttp2 库）
CONFIG_LIBCURL_NGHTTP2=y

# 使用 OpenSSL 作为后端加密库（尽管系统可能用 GnuTLS，但 curl 可独立配置）
CONFIG_LIBCURL_OPENSSL=y

# 支持代理功能（HTTP、SOCKS 等）
CONFIG_LIBCURL_PROXY=y

# 支持 TFTP 协议
CONFIG_LIBCURL_TFTP=y

# 使用线程化 DNS 解析器（提升并发性能）
CONFIG_LIBCURL_THREADED_RESOLVER=y

# 支持 TLS-SRP 认证（与 GNUTLS 一致）
CONFIG_LIBCURL_TLS_SRP=y

# 支持 Unix 域套接字通信
CONFIG_LIBCURL_UNIX_SOCKETS=y


#=================================================#
#               基础工具与系统工具包
#=================================================#

# attr 工具：用于管理文件扩展属性（getfattr/setfattr）
CONFIG_PACKAGE_attr=y

# Avahi D-Bus 守护进程：实现 mDNS/DNS-SD（零配置网络服务发现）
CONFIG_PACKAGE_avahi-dbus-daemon=y

# Bash shell：GNU Bourne-Again Shell，提供更丰富的脚本功能
CONFIG_PACKAGE_bash=y

# blkid：用于识别块设备的类型和 UUID
CONFIG_PACKAGE_blkid=y

# btrfs-progs：Btrfs 文件系统管理工具
CONFIG_PACKAGE_btrfs-progs=y

# curl：命令行 URL 传输工具，支持多种协议
CONFIG_PACKAGE_curl=y

# D-Bus 消息总线系统：进程间通信基础设施
CONFIG_PACKAGE_dbus=y

# fdisk：磁盘分区工具
CONFIG_PACKAGE_fdisk=y

# iperf3：网络带宽性能测试工具
CONFIG_PACKAGE_iperf3=y


#=================================================#
#               内核模块：硬件驱动与通用支持
#=================================================#

# 网络绑定（Bonding）驱动模块
CONFIG_PACKAGE_kmod-bonding=y

# 内核级压缩算法支持（acompress 框架）
CONFIG_PACKAGE_kmod-crypto-acompress=y

# BLAKE2b 哈希算法内核支持
CONFIG_PACKAGE_kmod-crypto-blake2b=y

# XXHash 高速哈希算法内核支持
CONFIG_PACKAGE_kmod-crypto-xxhash=y

# Btrfs 文件系统内核支持
CONFIG_PACKAGE_kmod-fs-btrfs=y

# FUSE（用户空间文件系统）支持
CONFIG_PACKAGE_kmod-fuse=y

# HID（人机接口设备）核心支持
CONFIG_PACKAGE_kmod-hid=y

# 标准 HID 通用驱动（如键盘鼠标）
CONFIG_PACKAGE_kmod-hid-generic=y

# I2C 核心支持（用于传感器、EEPROM 等外设通信）
CONFIG_PACKAGE_kmod-i2c-core=m

# 输入子系统核心模块
CONFIG_PACKAGE_kmod-input-core=y

# evdev 输入事件设备驱动（供用户空间读取输入事件）
CONFIG_PACKAGE_kmod-input-evdev=y

# LZO 压缩算法内核库支持
CONFIG_PACKAGE_kmod-lib-lzo=y

# RAID6 校验计算加速库
CONFIG_PACKAGE_kmod-lib-raid6=y

# XOR 数据校验加速库
CONFIG_PACKAGE_kmod-lib-xor=y

# xxHash 算法内核库支持
CONFIG_PACKAGE_kmod-lib-xxhash=y

# zlib 压缩：deflate 算法内核支持
CONFIG_PACKAGE_kmod-lib-zlib-deflate=y

# zlib 压缩：inflate 算法内核支持
CONFIG_PACKAGE_kmod-lib-zlib-inflate=y

# ZSTD 压缩算法内核支持
CONFIG_PACKAGE_kmod-lib-zstd=y

# MII（媒体无关接口）支持，用于以太网 PHY 管理
CONFIG_PACKAGE_kmod-mii=y

# 允许对 MTD（闪存设备）进行读写操作
CONFIG_PACKAGE_kmod-mtd-rw=y

# USB 2.0 EHCI 主控制器驱动
CONFIG_PACKAGE_kmod-usb-ehci=y

# USB HID 设备支持（如键盘、鼠标）
CONFIG_PACKAGE_kmod-usb-hid=y

# CP2112 USB-to-SMBus/I2C 桥接芯片驱动（模块方式加载）
CONFIG_PACKAGE_kmod-usb-hid-cp2112=m

# USB 网络设备通用驱动
CONFIG_PACKAGE_kmod-usb-net=y

# CDC Ethernet 类 USB 网卡支持
CONFIG_PACKAGE_kmod-usb-net-cdc-ether=y

# RNDIS 协议 USB 网络设备支持（Windows 常用）
CONFIG_PACKAGE_kmod-usb-net-rndis=y

# USB 1.1 OHCI 主控制器驱动
CONFIG_PACKAGE_kmod-usb-ohci=y

# USB 打印机支持
# CONFIG_PACKAGE_kmod-usb-printer=y

# USB 1.1 UHCI 主控制器驱动（旧式 Intel 芯片）
CONFIG_PACKAGE_kmod-usb-uhci=y

# USB 2.0 支持（EHCI 前置依赖）
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_6relayd=y
CONFIG_PACKAGE_luci-app-sqm=y
CONFIG_PACKAGE_sqm-scripts=y
CONFIG_PACKAGE_kmod-sched-cake=y
# 1. Hardware Offloading
CONFIG_PACKAGE_kmod-nft-offload=y
CONFIG_PACKAGE_kmod-br-netfilter=y
CONFIG_PACKAGE_bridge-utils=y
# 3. Advanced TCP Congestion Control
CONFIG_PACKAGE_kmod-tcp-bbr=y
